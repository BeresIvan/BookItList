<div class="card">
    <div class="card-header">
        <h4>{{title}}</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-4">
                <h5 class="card-title">Author</h5>
                <p class="card-text">{{author}}</p>

                <h5 class="card-title">Genre</h5>
                <p class="card-text">{{genre}}</p>
            </div>
            <div class="col-4">
                <h5 class="card-title">Year</h5>
                <p class="card-text">{{year}}</p>

                <h5 class="card-title">Pages</h5>
                <p class="card-text">{{pages}}</p>
            </div>
            <div class="col-4">
                <img src="{{img}}" style="max-width: 100px;">
            </div>
        </div>
        </br>
        <div class="row">
            <div class="col-12">
                <h5 class="card-title">Notes</h5>
                <p class="card-text">{{userNotes}}</p>
            </div>
        </div>
        <a href="/edit/{{id}}" class="btn-warning btn-sm edit" data-id="{{id}}" style="margin-right: 10px;">
            <span data-id="{{id}}">Edit</span>
        </a>
        <button type="button" class="btn-success btn-sm read" data-id="{{this.id}}" data-bookedIt="{{this.bookedIt}}">
            <span class="fa fa-book" data-id="{{this.id}}" data-bookedIt="{{this.bookedIt}}"></span>
        </button>
    </div>
</div>
